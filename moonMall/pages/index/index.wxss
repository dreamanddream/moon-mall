/**index.wxss**/
@import "../../templates/wxSearch/wxSearch.wxss";
@import "../../templates/recommend-goods-item/recommend-goods-item.wxss";
/*sousuo  */
.page {
  min-height: 100%;
}
.container {
  min-height: 100%;
}
.introduced {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
}
.introduced .introudced-img {
  width: 175rpx;
  height: 56rpx;
  margin: auto;
}
.introduced .introduced-text {
  font-size: 32rpx;
}
 .search-wrap {
    display: flex;
    align-items: center;
    width: 100%;
    height: 90rpx;
    color: #fff;
    background: #fb4747;
    border-bottom: 1px solid #fb4747;
  }
  .search-location {
    height: 90rpx;
    line-height: 90rpx;
    margin-left: 22rpx;
    font-size: 26rpx;
    overflow: hidden;
  }
  .search {
    flex-grow: 1;
    margin: 15rpx 24rpx;
  }
  .search-icon {
    width: 44rpx;
    height: 90rpx;
    line-height: 90rpx;
    margin-right: 22rpx;
  }
.coupons {
  width: 100%;
  height: auto;
  background-color: #efefef;
}

.coupons-item {
  width: 350rpx;
  height: 200rpx;
  margin-top: 10rpx; /*8rpx*/
  margin-left: 15rpx; /*5rpx*/
  margin-right: 5rpx;
  background: url(https://cdn.it120.cc/apifactory/2017/11/27/cf42314eac4e69e2498d303945636994.png) 0 0 no-repeat;
  background-size: 350rpx 200rpx;
  background-color: white; /*#f1a83b*/
  box-sizing: content-box;
  font-size: 20rpx;
  line-height: 35rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
}

.coupons-date-money {
  width: 350rpx;
  height: 150rpx;
  display: inline-flex;
  flex-direction: row;
}

.coupons-date-money .coupons-info {
  width: 230rpx;
  height: 150rpx;
  padding-top: 40rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  display: block;
  white-space: pre-line;
  text-align: center;
  color: black;
}

.coupons-date-money .coupons-money {
  width: 120rpx;
  height: 120rpx;
  margin-top: 30rpx;
  font-size: 36rpx;
  line-height: 50rpx;
  text-align: center;
  color: yellow;
}

.coupons-name {
  width: 350rpx;
  height: 45rpx;
  padding-top: 10rpx;
  text-align: center;
  font-size: 32rpx;
  letter-spacing: 12rpx;
  color: #666;
}

.more-things {
  position: fixed;
  width: 100%;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
popup__content {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  text-align: center;
}

.swiper-container {
  width: 750rpx;
  position: relative;
  background-color: white;
}

.swiper_box {
  width: 100%;
  height: 375rpx; /*562.5rpx;*//**/
  overflow: visible;
}

.swiper_item{
  overflow: visible;
  border-radius: 50%;
}

.slide-image {
  /*swiper-item image */
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 375rpx; /*562.5rpx;*/
  border-radius: 15rpx;
  background-color: #fff;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.swiper-container .dots {
  position: relative;
  bottom: 10rpx;
  margin: 20rpx 30rpx 0 0;
  display: flex;
  justify-content: flex-end;
}

.swiper-container .dots .dot {
  margin: 0 10rpx;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background-color: #999;
  transition: all 0.6s;
  opacity: 0.5;
}

.swiper-container .dots .dot.active {
  background-color: red;
  opacity: 1;
}

.introduced {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: white;
  margin-top: 15rpx;
  color: #e64340;
}

.introduced .introudced-img {
  width: 175rpx;
  height: 56rpx;
}

.type-goods{
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: center;
}

.goods-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
  /*padding: 24rpx;*/
  width: 100%;
  height: auto;
  overflow: hidden;
  background-color: #fff;
}

.goods-box {
  position: relative;
  width: 700rpx;
  height: 250rpx;
  background-color: white;
  overflow: hidden;
  margin: 0 0 25rpx 25rpx;
  display: inline-flex;
  flex-direction: row;
}

.pos-fiexd {
  position: fixed;
  top: 0;
  left: 0;
}